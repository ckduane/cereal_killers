= form_for @product do |f|

	.form-group
		= f.label :cereal_name
		= f.text_field :name, required: true, class: "form-control"

	.form-group
		= f.fields_for :reviews do |r|
			= r.label :rating
			.star-rating
				= r.radio_button :rating, 1, required: true
				%i
				= r.radio_button :rating, 2
				%i
				= r.radio_button :rating, 3
				%i
				= r.radio_button :rating, 4
				%i
				= r.radio_button :rating, 5
				%i

			.form-group
				= r.label :review
				= r.text_area :comment, size: "30x10", required: true, class: "form-control"

	.form-group
		= f.label :upload_images
		= f.file_field :uploads, multiple: true,  accept: 'image/png,image/gif,image/jpeg', class: "form-control-file", id: 'fileInput'
		
		%br
		= f.submit "Submit", class: "btn btn-primary"