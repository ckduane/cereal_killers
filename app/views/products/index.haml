.container-fluid
	%h1.text-center BAM! all of em cereals reviewed
	.row
		- @products.each do |p|
			.col-lg-3.col-md-4.col-6.cereal-img
				%h3.text-center= link_to "#{p.name}", product_path(p.id)
				.text-center= image_tag("#{rating_average(p.reviews).round}star.png")
				- if p.uploads.attached?
					= link_to(image_tag(p.uploads.first, class: 'img-thumbnail'), product_path(p.id))
				- else
					= link_to(image_tag('placeholder.jpg', class: 'img-thumbnail'), product_path(p.id))
				
