.container
	.row
		%h1 BAM! all of em cereals in a list
	.row
		- @products.each do |p|
			.col-lg-3.col-md-4.col-6.cereal-img
				- if p.uploads.attached?
					= link_to(image_tag(p.uploads.first, class: 'img-thumbnail'), product_path(p.id))
					%p= link_to "#{p.name}", product_path(p.id)
						
				- else
					= link_to(image_tag('butcher.svg', class: 'img-thumbnail'), product_path(p.id))
					%p= link_to "#{p.name}", product_path(p.id)
