.container
	%h1.text-center BAM! all of em cereals reviewed
	.row
		- @products.each do |p|
			.col-6.col-md-4.col-lg-3.cereal-img-container.text-center
				%h3= link_to "#{p.name}", product_path(p.id)
				= image_tag("#{rating_average(p.reviews).round}star.png", class: 'star-img')
				- if p.uploads.attached?
					.cereal-img= link_to(image_tag(p.uploads.first), product_path(p.id))
				- else
					.cereal-img= link_to(image_tag('placeholder.jpg'), product_path(p.id))
				
