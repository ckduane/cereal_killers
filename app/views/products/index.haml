.container-fluid.m-0.p-0
	.row
		.col-8.mx-auto
			%h1.my-5.text-center.shadow.bg-gray-900.text-light.rotate.px-3 Your next cereal awaits
	.row.w-100.m-0.bg-gray-900.d-flex.align-items-end
		- @products.each do |p|
			.col-4.col-md-3.p-0.pb-5.m-0
				- if p.photo.attached?
					= link_to(image_tag(p.photo.variant(resize: '300x300'), class: "h-auto w-100"), product_path(p.id))
				- else
					= link_to(image_tag('placeholder.jpg', class: "w-100 h-100"), product_path(p.id))
				.shelf.text-center.w-100
				.label.position-absolute.shadow.d-flex.justify-content-center
					= link_to "#{p.name}", product_path(p.id), class: "bg-white d-inline-block m-auto text-center stretched-link text-gray-900 p-1"
					- if p.reviews.present?
						.price.bg-warning.d-inline-block.p-1= sprintf('%.2f', rating_average(p.reviews))