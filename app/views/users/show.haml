.container-fluid
	%h1 #{@user.username}
	- if @user.username == current_user.username
		%p= link_to "Edit Account", edit_user_registration_path(@user.id), class: "btn btn-primary"
	= image_tag(@user.thumbnail)

	- if !@user.reviews.empty?
		.container-fluid
			%h2 Reviews
			- @user.reviews.each do |r|
				.row.reviews
					.col
						%p= link_to r.product.name, product_path(r.product.id)
					.col-9
						%div= r.created_at.strftime("%m/%d/%Y")
						= image_tag("#{r.rating}star.png")
						.comment= r.comment