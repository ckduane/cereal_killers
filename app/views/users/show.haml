.container-fluid
	%h1.text-center.shadow.bg-gray-900.text-light.rotate-neg.d-inline-block.px-5 #{@user.username}

	.d-block
		.d-inline-block.bg-white.shadow.shadow-hover.text-center.my-3.p-3
			= image_tag(@user.thumbnail, class: 'd-flex m-auto d-md-block m-md-0')
			%h3.mt-3= @user.username

	- if user_signed_in? && @user.username == current_user.username
		.bg-gray-300.shadow.p-4.w-50.ml-5
			.border.border-dark
				%h3.text-center Requisitions
			.border.border-dark.border-top-0
				%li.p-2= link_to "Edit Account", edit_user_registration_path(@user.id), class: "mt-1 rounded-0"

	- if !@user.reviews.empty?
		.container-fluid
			.row
				%h2.shadow.bg-gray-900.text-light.rotate.d-inline-block.mb-4.px-5 Reviews
			- @user.reviews.each do |r|
				.row.mb-5
					.col-3.overlap.p-0
						.bg-white.shadow.shadow-hover.text-center.my-3.p-3
							- if r.product.uploads.attached?
								= link_to(image_tag(r.product.uploads.first.variant(resize: '200x200'), class: "w-100"), product_path(r.product.id))
							- else
								= link_to(image_tag('placeholder.jpg', class: "w-100"), product_path(r.product.id))
							%h3.responsive-font.mt-3= link_to r.product.name, product_path(r.product.id), class: 'stretched-link'
					.col-9.bg-yellow.shadow.p-4
						.row.px-4
							.col-2.col-md-1.border.border-dark.border-right-0.d-flex.align-items-center.justify-content-center
								=image_tag('form/review.png', class: 'icon m-1')
							.col-10.col-md-11.border.border-dark
								%h3.text-center Cereal Incident Report Form
						.row.px-4
							.col-12.text-break.border.border-dark.border-bottom-0.bg-opacity.px-1
								%div 1. Rating Scale
							.col-12.border.border-dark.border-bottom-0.p-1
								= image_tag("#{r.rating}star.png")
							.col-12.text-break.border.border-dark.border-bottom-0.bg-opacity.px-1
								%div 2. Specific Description of Incident
							.col-12.border.border-dark.p-2
								= r.comment
						.row.mt-4.d-flex.justify-content-between
							.col-5
								.border-bottom.border-dark.rounded-0.px-1.cursive-font
									= r.user.username
								.d-block.m-0.px-1 Signature of Person Submitting Report
							.col-5
								.border-bottom.border-dark.rounded-0.px-1
									= r.created_at.strftime("%B %-d, %Y")
								.d-block.m-0.px-1 Date Report Submitted
							.col-5.mt-4
								.border-bottom.border-dark.rounded-0.px-1
									= r.user.username
								.d-block.m-0.px-1 Name of Person Submitting Report